{% extends 'base.html.twig' %}

{% block title %}Recherche - OpaleBD
{% endblock %}

{% block content %}

	<h1>Recherche sur OpaleBD:</h1>

	<div class="accordion" id="accordionAuteurs">
		<div class="accordion-item">
			<h2 class="accordion-header" id="headingOne">
				<button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
					Auteurs
				</button>
			</h2>
			<div id="collapseOne" class="accordion-collapse collapse" aria-labelledby="headingOne" data-bs-parent="#accordionExample">
				<div class="container-fluid row mx-0 p-0 mb-5 mt-5">
					<h2>Auteurs:</h2>
					{% for auteur in auteurs %}
						<div class="col-2">
							<a href="{{ path("app_auteurs", {"slug":auteur.slug}) }}">
								<img src="assets/img/auteurs/{{ auteur.illustration }}" style="object-fit: cover; object-position: 50% 0%;" width="150px" height="150px">
								<p>{{ auteur.name }}</p>
							</a>
						</div>
					{% endfor %}
				</div>
			</div>
		</div>
	</div>

	<div class="accordion" id="accordionOeuvres">
		<div class="accordion-item">
			<h2 class="accordion-header" id="headingTwo">
				<button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo" aria-expanded="true" aria-controls="collapseOne">
					Oeuvres
				</button>
			</h2>
			<div id="collapseTwo" class="accordion-collapse collapse" aria-labelledby="headingTwo" data-bs-parent="#accordionExample">
					<div class="container-fluid row mx-0 p-0 mb-5 mt-5">
						<h2>Oeuvres:</h2>
						{% for oeuvre in oeuvres %}
							<div class="col-2">
								<a href="{{ path("app_artwork", {"slug":oeuvre.slug}) }}">
									<img src="assets/img/oeuvres/{{ oeuvre.illustration }}" width="200px" height="auto">
									<p>{{ oeuvre.name }}</p>
								</a>
							</div>
						{% endfor %}
					</div>
				</div>
			</div>
		</div>

	<div class="accordion" id="accordionManif">
		<div class="accordion-item">
			<h2 class="accordion-header" id="headingThree">
				<button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseThree" aria-expanded="true" aria-controls="collapseOne">
					Manifestions
				</button>
			</h2>
			<div id="collapseThree" class="accordion-collapse collapse" aria-labelledby="headingThree" data-bs-parent="#accordionExample">
		<div class="container-fluid row mx-0 p-0 mb-5 mt-5">
			<h2>Manifestions:</h2>
			{% for manif in manifs %}
				<div class="col-2">
					<a href="{{ path("app_manif", {"slug":manif.slug}) }}">
						<img src="assets/img/affiches/{{ manif.affiche }}" width="200px" height="auto">
						<p>{{ manif.name }}</p>
					</a>
				</div>
			{% endfor %}
					</div>
				</div>
			</div>
		</div>

	{% endblock %}
